extends ../layout

block content
    .container.mt-4
        h2.mb-4 Locations
        table#locationsTable.display.table.table-striped.table-bordered
            thead
                tr
                    th Sr. No
                    th Place
                    th State
                    th Created At
                    th Updated At
                    th Actions
            tbody
                each location,  index in data
                    tr
                        td= index+1
                        td= location['City.name']
                        td= location['States.name']
                        td= new Date(location.createdAt).toLocaleString()
                        td= new Date(location.updatedAt).toLocaleString()
    block stylesheet 
        link(rel='stylesheet', href='https://cdn.datatables.net/1.12.1/css/dataTables.bootstrap5.min.css')
    block script 
        script(src='https://code.jquery.com/jquery-3.5.1.min.js')
        script(src='https://cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js')
        script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js')
        script.
            $(document).ready(function () {
            $('#pages-datatable').DataTable({
                order:[1,'DESC']
            });
            });